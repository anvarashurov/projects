<!DOCTYPE html>
<html>
  <head>
    <title>XC Login Page</title>
    <%= stylesheet_link_tag "application" , :media=> "all" %>
    <%= javascript_include_tag "application" %>
  </head>
  
  <body>   

    <div class="option-container">
      <% if current_user.nil? %>
        <a href="<%= new_session_url %>">Sign-in</a>
        <a href="<%= new_user_url %>">&nbsp;Sign-up</a>
      <% end %>
    </div>
    
    <%= yield %>

  </body>

</html>