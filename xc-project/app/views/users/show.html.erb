<% if !current_user.nil? %>
    <div class="top-banner">
        <div id="username">
            <span id="name">
                <%= current_user.name %>
            </span>
        </div>
        <div id="logout-button">
            <form id="form-logout" action="<%= session_url %>" method="POST">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                <input type="hidden" value="delete" name="_method" />
                <input id="logout-button" type="submit" value="Logout" />
            </form>
        </div>
    </div>
    <div id="wallpaper">
        <img id="lauter" src="https://upload.travelawaits.com/ta/uploads/2021/04/14ba7a4fca1b5136527540a15527814ba7a.jpg" />
        <p id="location">Lauterbrunnen, Switzerland</p>
    </div>
<% end %>